
<html>
<head>
	<title><%=title%></title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="/CSS/style.css">
</head>
<body>
	 <div>
	 	<header class="app-heading">
	 		<h1>TODO App</h1>
	 	</header>
      	<main>
      	    <section class="discription">
      	    	<div class="form-group">
    				<label class="label-text" for="exampleFormControlTextarea1">DESCRIPTION</label>
    				<textarea placeholder="enter description.." class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
  				</div>
      	    </section>


      	    <section class="category-date-container">
      	    	<div class="row">
    				<div class="col">
      					<div class="form-group">
    						    <label class="label-text" for="category-options">CATEGORY</label>
    							<select class="form-control" id="category-options">
      								<option selected disabled="">Choose a category</option>
      								<option>SCHOOL</option>
      								<option>WORK</option>
      								<option>PERSONAL</option>
      								<option>DAILY</option>
      								<option>MISC</option>
    							</select>
  						</div>
    				</div>
    				<div class="col">
    					<label class="label-text" for="exampleFormControlSelect2">DUE DATE</label>
      					<input id="date" type="date" class="form-control" placeholder="Last name">
    				</div>
  				</div>
      	    </section>


      	    <section class="add-delete-btns-container">
      	    	<div >
      	    		<button type="button" class="btn btn-dark"><i class="fas fa-plus mg5px"></i> ADD TASK</button>
      	    	    <button type="button" class="btn btn-danger"><i class="far mg5px fa-trash-alt"></i> DELETE</button>
      	    	</div>
      	    	
      	    </section>


      	    <section class="list-container">
      	    	<ul class="list-group">
					  <% for(let task of tasks){ %>
						<li class="list-group-item">
							<div class="date-and-details">
								<div class="check-btn">
								  <input class="inp" type="checkbox">
								</div>
								<div >
									<p class="discription-display"> <%= task.description %>   </p>
									<p ><i class="fas fa-calendar-alt"></i> <%= task.date %> </p>
								</div>
							</div>
							<div class="type-tag">
								<p class="<%= task.category.toLowerCase()%>"><%= task.category %></p>
							</div>
						</li>
					  <% } %>
				</ul>
      	    </section>
      	</main>
	 </div>
</body>
</html>